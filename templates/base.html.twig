<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {# Bootstrap #}
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
        <link rel="stylesheet" href="{{ asset('css/colors.css') }}">
        <link rel="stylesheet" href="{{ asset('css/navbar.css') }}">
        <link rel="stylesheet" href="{{ asset('css/logo.css') }}">
        <link rel="stylesheet" href="{{ asset('css/main_header.css') }}">
        <link rel="stylesheet" href="{{ asset('css/main_footer.css') }}">
        {% block stylesheets %}{% endblock %}
    </head>
    <body>
        {% block body %}
            <nav class="navbar">
                <div>
                    <a class="logo" href="{{ path('news_list') }}">TechWatch</a>
                </div>
                <div class="navbar-links">
                {% if app.user %}
                    <a class="btn btn-secondary" href="{{ path('news_create') }}">Add source</a>
                    <a class="btn btn-warning" href="{{ path('app_logout') }}">Logout</a>
                {% else %}
                    <a class="btn btn-secondary" href="{{ path('app_login') }}">Login</a>
                {% endif %}
                </div>
            </nav>

            <header class="container-fluid text-center text-break block-header">
                {% block header %}{% endblock %}
            </header>

            <div class="container-fluid block-content">
                {% block flashMessages %}
                    {% include "flash_message/flash_message.html.twig" %}
                {% endblock %}
                {% block content %}{% endblock %}
            </div>

            <footer class="container-fluid text-center text-break block-footer">
                {% block footer %}<a class="logo" href="#">TechWatch</a>{% endblock %}
            </footer>
        {% endblock %}
        {% block javascripts %}{% endblock %}
    </body>
</html>
